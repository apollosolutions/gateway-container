{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://specs.apollographql.com/docker/gateway-container",
  "title": "Apollo Gateway Container Configuration",
  "description": "Configuration for Apollo Server and Apollo Gateway running inside a Docker container",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "server": {
      "title": "Server",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "debug": {
          "type": "boolean"
        },
        "cors": {
          "title": "CORS",
          "anyOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "origin": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "methods": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "allowedHeaders": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "exposedHeaders": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "credentials": {
                  "type": "boolean"
                },
                "maxAge": {
                  "type": "number"
                },
                "preflightContinue": {
                  "type": "boolean"
                },
                "optionsSuccessStatus": {
                  "type": "number"
                }
              }
            }
          ]
        },
        "introspection": {
          "type": "boolean"
        },
        "usageReporting": {
          "anyOf": [
            { "type": "boolean", "default": true },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "sendVariableValues": {
                  "anyOf": [
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["none"],
                      "properties": {
                        "none": { "type": "boolean" }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["all"],
                      "properties": {
                        "all": { "type": "boolean" }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["onlyNames"],
                      "properties": {
                        "onlyNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["exceptNames"],
                      "properties": {
                        "exceptNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  ]
                },
                "sendHeaders": {
                  "anyOf": [
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["none"],
                      "properties": { "none": { "type": "boolean" } }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["all"],
                      "properties": { "all": { "type": "boolean" } }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["onlyNames"],
                      "properties": {
                        "onlyNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["exceptNames"],
                      "properties": {
                        "exceptNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  ]
                },
                "sendUnexecutableOperationDocuments": { "type": "boolean" },
                "sendReportsImmediately": { "type": "boolean" },
                "reportIntervalMs": { "type": "number" },
                "maxUncompressedReportSize": { "type": "number" },
                "maxAttempts": { "type": "number" },
                "minimumRetryDelayMs": { "type": "number" }
              }
            }
          ]
        },
        "inlineTracing": { "type": "boolean" },
        "persistedQueries": {
          "description": "Either false, or { ttl: number } & https://github.com/luin/ioredis/blob/HEAD/API.md#new_Redis",
          "anyOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ttl": { "type": "number" },
                "redis": {
                  "$ref": "#/definitions/redisClientConfig"
                }
              }
            }
          ]
        }
      }
    },
    "gateway": {
      "title": "Gateway",
      "type": "object",
      "additionalProperties": false,
      "required": [],
      "properties": {
        "debug": {
          "type": "boolean"
        },
        "serviceList": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "url"],
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        },
        "supergraphSdlPath": {
          "type": "string"
        },
        "forwardHeaders": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "as": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        },
        "persistedQueries": { "type": "boolean" }
      }
    },
    "openTelemetry": {
      "title": "OpenTelemetry",
      "type": "object",
      "additionalProperties": false,
      "required": ["serviceName"],
      "properties": {
        "serviceName": { "type": "string" },
        "maxQueueSize": { "type": "number", "default": 1000 },
        "scheduledDelayMillis": { "type": "number", "default": 1000 },
        "zipkin": {
          "$ref": "#/definitions/zipkinExporterConfig"
        }
      }
    }
  },
  "definitions": {
    "redisClientConfig": {
      "title": "Redis Client",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": { "type": "number" },
        "host": { "type": "string" },
        "family": { "type": "number" },
        "path": { "type": "string" },
        "keepAlive": { "type": "number" },
        "noDelay": { "type": "boolean", "default": true },
        "connectionName": { "type": "string" },
        "db": { "type": "number" },
        "password": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "env": {
              "description": "Name of environment variable",
              "type": "string"
            }
          }
        },
        "username": { "type": "string" },
        "dropBufferSupport": { "type": "boolean" },
        "enableReadyCheck": { "type": "boolean" },
        "enableOfflineQueue": { "type": "boolean" },
        "connectTimeout": { "type": "number" },
        "disconnectTimeout": { "type": "number" },
        "commandTimeout": { "type": "number" },
        "autoResubscribe": { "type": "boolean" },
        "autoResendUnfulfilledCommands": { "type": "boolean" },
        "lazyConnect": { "type": "boolean" },
        "tls": {
          "type": "object",
          "additionalProperties": false,
          "properties": {}
        },
        "keyPrefix": { "type": "string" },
        "maxRetriesPerRequest": { "type": "number" },
        "stringNumbers": { "type": "boolean" },
        "enableAutoPipelining": { "type": "boolean" },
        "autoPipeliningIgnoredCommands": {
          "type": "array",
          "items": { "type": "string" }
        },
        "maxScriptsCachingTime": { "type": "number" }
      }
    },
    "zipkinExporterConfig": {
      "title": "Zipkin Exporter",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "serviceName": { "type": "string" },
        "url": {
          "type": "string",
          "default": "http://localhost:9411/api/v2/spans"
        },
        "statusCodeTagName": { "type": "string" },
        "statusDescriptionTagName": { "type": "string" }
      }
    }
  }
}
