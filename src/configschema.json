{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://www.apollographql.com/gateway-container",
  "title": "Apollo Gateway Container Config",
  "description": "Configuration for Apollo Server and Apollo Gateway running inside a Docker container",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "debug": {
          "type": "boolean"
        },
        "cors": {
          "anyOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "origin": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "methods": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "allowedHeaders": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "exposedHeaders": {
                  "anyOf": [
                    { "type": "string" },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                },
                "credentials": {
                  "type": "boolean"
                },
                "maxAge": {
                  "type": "number"
                },
                "preflightContinue": {
                  "type": "boolean"
                },
                "optionsSuccessStatus": {
                  "type": "number"
                }
              }
            }
          ]
        },
        "introspection": {
          "type": "boolean"
        },
        "usageReporting": {
          "anyOf": [
            { "type": "boolean", "default": true },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "sendVariableValues": {
                  "anyOf": [
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["none"],
                      "properties": {
                        "none": { "type": "boolean" }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["all"],
                      "properties": {
                        "all": { "type": "boolean" }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["onlyNames"],
                      "properties": {
                        "onlyNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["exceptNames"],
                      "properties": {
                        "exceptNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  ]
                },
                "sendHeaders": {
                  "anyOf": [
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["none"],
                      "properties": { "none": { "type": "boolean" } }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["all"],
                      "properties": { "all": { "type": "boolean" } }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["onlyNames"],
                      "properties": {
                        "onlyNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": ["exceptNames"],
                      "properties": {
                        "exceptNames": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  ]
                },
                "sendUnexecutableOperationDocuments": { "type": "boolean" },
                "sendReportsImmediately": { "type": "boolean" },
                "reportIntervalMs": { "type": "number" },
                "maxUncompressedReportSize": { "type": "number" },
                "maxAttempts": { "type": "number" },
                "minimumRetryDelayMs": { "type": "number" }
              }
            }
          ]
        },
        "inlineTracing": { "type": "boolean" }
      }
    },
    "gateway": {
      "type": "object",
      "additionalProperties": false,
      "required": [],
      "properties": {
        "debug": {
          "type": "boolean"
        },
        "serviceList": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "url"],
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            }
          }
        },
        "supergraphSdlPath": {
          "type": "string"
        },
        "forwardHeaders": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "as": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        },
        "persistedQueries": { "type": "boolean" }
      }
    },
    "openTelemetry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["serviceName"],
      "properties": {
        "serviceName": { "type": "string" },
        "maxQueueSize": { "type": "number", "default": 1000 },
        "scheduledDelayMillis": { "type": "number", "default": 1000 }
      }
    }
  }
}
